<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/purple"
    tools:context=".ProfilePage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="25px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/purple"
        android:gravity="center"
        android:foregroundGravity="center"
        app:buttonGravity="center_vertical"
        tools:ignore="ExtraText,MissingConstraints">
        <RelativeLayout
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@color/purple"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="LOGO"
                android:textAlignment="center"
                android:textSize="70px"
                />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottnav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="400px"
            android:layout_height="400px"
            android:src="@drawable/emote"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/button1"
            android:layout_width="300px"
            android:layout_gravity="center"
            android:layout_height="100px"
            android:textColor="#ffffff"
            android:backgroundTint="@color/teal"
            android:text="change"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="20px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_marginHorizontal="20px"
                android:foregroundGravity="center"
                android:textSize="50px"
                android:text="Username:"/>

            <EditText
                android:id="@+id/a1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20px"
                android:hint="✎ Add username"
                android:background="#FF6269EE"
                android:textSize="50px" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="20px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginHorizontal="20px"
                android:gravity="center"
                android:foregroundGravity="center"
                android:textSize="50px"
                android:text="Status:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FF6269EE"
                android:layout_marginHorizontal="20px"
                android:text="Donator"
                android:textSize="50px" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="20px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginHorizontal="20px"
                android:gravity="center"
                android:foregroundGravity="center"
                android:textSize="50px"
                android:text="Address:"/>

            <EditText
                android:id="@+id/a2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FF6269EE"
                android:hint="✎ Add an address "
                android:layout_marginHorizontal="20px"
                android:textSize="50px" />
        </LinearLayout>
        <Button
            android:id="@+id/save"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="50px"
            android:text="Save"/>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottnav"
        android:layout_width="match_parent"
        android:layout_height="190px"
        android:background="@color/purple"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:itemActiveIndicatorStyle="@style/Widget.Design.BottomNavigationView"
        app:itemIconSize="60px"
        app:elevation="0dp"
        android:textAlignment="gravity"
        app:layout_wrapBehaviorInParent="included"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:itemTextAppearanceActiveBoldEnabled="false"
        app:menu="@menu/bottom_nav"/>
</androidx.constraintlayout.widget.ConstraintLayout>