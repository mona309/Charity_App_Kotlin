<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:textAlignment="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:gravity="center"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    app:layout_anchorGravity="center"
    tools:context=".HomePage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="25px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/purple"
        android:gravity="center"
        android:foregroundGravity="center"
        app:buttonGravity="center_vertical"
        tools:ignore="ExtraText,MissingConstraints">
        <RelativeLayout
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@color/purple"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="LOGO"
                android:textAlignment="center"
                android:textSize="70px"
                />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="25px"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/bottnav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foregroundGravity="center"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:foregroundGravity="center"
            android:clickable="true"
            android:id="@+id/clothes"
            app:cardBackgroundColor="#FF6269EE"
            app:cardCornerRadius="50px"
            app:cardElevation="0dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_centerInParent="true"
                android:contentDescription="Clothes"
                android:src="@drawable/check"
                tools:ignore="PxUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clothes"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:textSize="50px"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            android:text="Food"
            android:id="@+id/food"
            app:cardBackgroundColor="#FF6269EE"
            app:cardCornerRadius="50px"
            app:cardElevation="0dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_centerInParent="true"
                    android:contentDescription="Food"
                    android:src="@drawable/check" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:textSize="50px"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            android:text="Books"
            android:id="@+id/books"
            app:cardBackgroundColor="#FF6269EE"
            app:cardCornerRadius="50px"
            app:cardElevation="0dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_centerInParent="true"
                    android:contentDescription="Books"
                    android:src="@drawable/check" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Books"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:textSize="50px"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            android:text="Other"
            android:id="@+id/other"
            app:cardBackgroundColor="#FF6269EE"
            app:cardCornerRadius="50px"
            app:cardElevation="0dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_centerInParent="true"
                    android:contentDescription="Other"
                    android:src="@drawable/check" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:textSize="50px"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            android:text="Volunteer"
            android:id="@+id/volunteer"
            app:cardBackgroundColor="#FF6269EE"
            app:cardCornerRadius="50px"
            app:cardElevation="0dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_centerInParent="true"
                    android:contentDescription="Volunteer"
                    android:src="@drawable/check" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Volunteer"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:textSize="50px"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            android:text="Money"
            android:id="@+id/money"
            app:cardBackgroundColor="#FF6269EE"
            app:cardCornerRadius="50px"
            app:cardElevation="0dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_centerInParent="true"
                    android:contentDescription="Money"
                    android:src="@drawable/check" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Money"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:textSize="50px"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </GridLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottnav"
        android:layout_width="match_parent"
        android:layout_height="190px"
        android:background="@color/purple"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:itemActiveIndicatorStyle="@style/Widget.Design.BottomNavigationView"
        app:itemIconSize="60px"
        app:elevation="0dp"
        android:textAlignment="gravity"
        app:layout_wrapBehaviorInParent="included"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:itemTextAppearanceActiveBoldEnabled="false"
        app:menu="@menu/bottom_nav"/>
</androidx.constraintlayout.widget.ConstraintLayout>